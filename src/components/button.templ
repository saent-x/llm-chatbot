package components

import "fmt"

templ Button(text string, class string, action func(string)) {
	<button onclick={action("/chat")} class={fmt.Sprintf("bg-slate-950 mt-[20px] w-[400px] h-[60px] hover:bg-slate-600 text-[20px] text-white font-bold py-2 px-4 border-b-4 border-slate-700 hover:border-slate-500 rounded {%s}", class)}
    					type="button">
    		{text}
    </button>
}